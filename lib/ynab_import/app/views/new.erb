<html>
  <head>
    <title>YNAB CSV concerter</title>
    <style type="text/css" media="all">
      body {
        font-size: 18px;
      }

      .title {
        margin: 0 0 1em;
        font-size: 1.3em;
      }

      .upload-form {
        text-align: center;
        width: 400px;
        margin: 100px auto;
        padding: 2em;
      }

      .file-input {
        font-size: 1em;
        border: 2px solid #DDD;
        background: #EEE;
        padding: 0.5em;
        border-radius: 0.3em;
      }
    </style>
  </head>
  <body>

    <form class="upload-form" action="/convert" method="POST" enctype="multipart/form-data" id="form">
      <h1 class="title">Upload CSV</h1>
      <input type="file" name="file" id="input" class="file-input">
      <input type="submit" value="Upload" id="button">
    </form>

    <script type="text/javascript" charset="utf-8">
      document.getElementById("button").style.display = "none"
      document.getElementById("input").addEventListener("change", function (e) {
        document.getElementById("form").submit();
      }, false);
    </script>
  </body>
</html>
